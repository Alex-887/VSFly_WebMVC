<!doctype html>
<html lang="en">
@model IEnumerable<webapiclient2.Models.Flight>

@{
    Layout = null;
    ViewData["Title"] = "VsFlight";
}



<head>
    <meta charset="utf-8">
    <meta name="viewport" contentwidth="device-width, initial-scale=1,shrink-to-fit=no">
    <h1 align="center">VsFlight Bookers</h1>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="txt/css" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">
</head>

</p>
<body>

    <div align="center">
        <table class="table table-striped table-bordered" style="width: 80%" id="mydatatable" align="center">
            <thead align="center" >

                <tr class="table-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.Departure)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Destination)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        Seats left
                    </th>
                    <th>
                        Base price
                    </th>
                    <th>
                        Choose your flight
                    </th>
                </tr>
            </thead>
            <tbody align="center">
                @foreach (var item in Model)
                {
                    <tr >
                        <td>
                            @Html.DisplayFor(modelItem => item.Departure)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Destination)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SeatsAvailable)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.FlightNo">Buy this ticket</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>




    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>



    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>



    <script type="text/javascript">
        $(document).ready(function () {
            $('#mydatatable').dataTable();
        });
    </script>

    <style>


        h1 {
            font-size: 40px;
            margin-top: 15px;
        }
    </style>


</body>



</html>